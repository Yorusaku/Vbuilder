{
    "import": ["@cspell/dict-lorem-ipsum/cspell-ext.json"],
    "caseSensitive": false,
    "dictionaries": ["custom-words"],
    "dictionaryDefinitions": [
        {
            "name": "custom-words",
            "path": "./.cspell/custom-words.txt",
            "addWords": true
        }
    ],
    "ignorePaths": [
        "**/.git/**",
        "**/.vscode/**",
        "**/.husky/**",
        "**/.idea/**",
        "**/node_modules/**",
        "**/dist/**",
        "**/lib/**",
        "**/docs/**",
        "**/public/**",
        "**/assets/**",

        "**/stats.html",
        "**/pnpm-lock.yaml",
        "**/pnpm-workspace.yaml",
        "**/pnpm-catalogs.yaml",
        "**/turbo.json",
        "**/package.json",
        "**/tsconfig*.json",
        "**/cspell.json",

        "**/*.config.js",
        "**/*.config.ts",
        "**/*.config.mjs",
        "**/.prettierrc",
        "**/.editorconfig",
        "**/.gitignore",

        "**/language/**",
        "**/language.ts",
        "**/MOCK_DATA.ts",
        "**/*.svg",
        "**/*.png",
        "**/*.jpg",
        "**/*.webp",
        "**/*.min.js",
        "**/*.min.css",
        "**/*.map"
    ]
}
