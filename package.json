{
    "name": "miaoma-vbuilder",
    "version": "1.0.0",
    "description": "",
    "type": "module",
    "main": "index.js",
    "scripts": {
        "dev": "pnpm dev:builder & pnpm dev:runner",
        "dev:builder": "pnpm --filter builder dev",
        "dev:runner": "pnpm --filter runner dev",
        "lint:vue": "eslint --fix",
        "lint:style": "stylelint \"{packages,apps}/**/*.{css,scss,vue}\"",
        "lint": "pnpm lint:ts && pnpm lint:style",
        "spellcheck": "cspell lint --dot --gitignore --color --cache --show-suggestions \"(packages|apps)/**/*.@(html|js|cjs|mjs|ts|tsx|css|scss|md|vue)\"",
        "typecheck": "pnpm --filter builder typecheck ",
        "commit": "git-cz",
        "prepare": "husky",
        "clean": "rimraf \"{apps,packages}/**/{node_modules,docs,lib,dist,stats.html}\" node_modules pnpm-lock.yaml .eslintcache .cspellcache docs dist"
    },
    "keywords": [],
    "author": "Heyi",
    "license": "MiaoMaEdu",
    "config": {
        "commitizen": {
            "path": "node_modules/cz-git"
        }
    },
    "lint-staged": {
        "*.{md,json}": [
            "prettier --cache --write --no-error-on-unmatched-pattern"
        ],
        "*.{css,less}": [
            "stylelint --fix",
            "prettier --cache --write"
        ],
        "*.{js,jsx}": [
            "eslint --fix",
            "prettier --cache --write"
        ],
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --cache --parser=typescript --write"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "19.3.0",
        "@commitlint/config-conventional": "19.2.2",
        "eslint": "9.7.0",
        "eslint-config-miaoma": "workspace:*",
        "vue-eslint-parser": "9.4.3",
        "stylelint": "16.7.0",
        "stylelint-config-standard-vue": "1.0.0",
        "stylelint-config-standard": "36.0.1",
        "stylelint-config-standard-scss": "13.1.0",
        "cspell": "8.10.4",
        "husky": "9.0.11",
        "lint-staged": "15.2.7",
        "prettier": "3.3.3",
        "cz-git": "1.9.3",
        "commitizen": "4.3.0",
        "rimraf": "6.0.1"
    }
}
